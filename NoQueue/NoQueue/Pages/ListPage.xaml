<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Padding="15"
             BackgroundColor="White"
             x:Class="NoQueue.Pages.ListPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text=""
                     Clicked="ToolbarItem_Clicked"
                 IconImageSource="icon_logout.png"
                 Order="Primary"
                 Priority="1" />
        <ToolbarItem Text=""
                     Clicked="ToolbarItem_ClickedAdd"
                 IconImageSource="icon_add.png"
                 Order="Primary"
                 Priority="0" />
    </ContentPage.ToolbarItems>

    <ListView x:Name="MyListView"
            ItemsSource="{Binding PersonList}"
            CachingStrategy="RecycleElement"
            HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.ContextActions>
                        <MenuItem 
                            Clicked="MenuItem_Clicked"
                            CommandParameter="{Binding .}"
                            Text="Delete" IsDestructive="True" />
                    </ViewCell.ContextActions>
                    <Grid
                        Margin="10"
                        BackgroundColor="LightSteelBlue"
                        Padding="10">
                        <StackLayout>
                        <Label Text="{Binding citta}"
                               FontAttributes="Bold"
                               TextColor="Black"
                                d:Text="{Binding .}"
                                Style="{DynamicResource ListItemTextStyle}" />
                        <Label Text="{Binding negozio}" 
                                d:Text="Detail"
                               FontAttributes="Bold"
                               TextColor="Black"
                                Style="{DynamicResource ListItemDetailTextStyle}"/>
                        <StackLayout
                                Orientation="Horizontal">
                            <Label Text="{Binding data}" 
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                    d:Text="Detail"
                                    Style="{DynamicResource ListItemDetailTextStyle}"/>
                            <Label Text="{Binding ora}"
                                    HorizontalTextAlignment="End"
                                   FontAttributes="Bold"
                                   TextColor="Black"
                                    d:Text="Detail"
                                    Style="{DynamicResource ListItemDetailTextStyle}"/>
                            <Label Text=" : "
                                    HorizontalTextAlignment="End"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                    d:Text="Detail"
                                    Style="{DynamicResource ListItemDetailTextStyle}"/>
                            <Label Text="{Binding minuti}" 
                                    d:Text="Detail"
                                   TextColor="Black"
                                   FontAttributes="Bold"
                                    Style="{DynamicResource ListItemDetailTextStyle}"/>
                        </StackLayout>
                    </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
